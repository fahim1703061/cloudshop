{
    // django settings

    "files.associations": {
        "**/*.html": "html",
        "**/templates/**/*.html": "django-html",
        "**/templates/**/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    "emmet.includeLanguages": { "django-html": "html" },

    //prettier settings

    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4
}
